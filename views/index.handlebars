<h1>Eat Da Burger</h1>

<h2>Uneaten Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{this.burger}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{this.burger}}
    {{/if}}
  {{/each}}
</ul>

<h2>Create your burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newBurger">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>

